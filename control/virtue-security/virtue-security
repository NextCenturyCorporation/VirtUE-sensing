        # --- Failure Cases

        #       invalid resource id
        {
            "method": "GET",
            "path": "/resource/123123123123/validate/check",
            "returns": "JSON",
            "code": 400,
            "authenticate": True,
            "result_has_fields": {
                "error": True,
                "msg": "",
                "timestamp": ""
            },
            "results_validators": [validate_is_error]
        },

        #       invalid virtue id
        {
            "method": "GET",
            "path": "/resource/virtue/123456789/user/:username/application/:application/validate/check",
            "returns": "JSON",
            "code": 400,
            "authenticate": True,
            "result_has_fields": {
                "error": True,
                "msg": "",
                "timestamp": ""
            },
            "results_validators": [validate_is_error]
